/**app.wxss**/
.content-list-b{
  width: 288rpx;
  float: left;
  margin-top: 40rpx;
  position: relative;
  margin-right: 55rpx;
}

.content-list-b>image{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.content-list-b>view{
  padding: 24rpx 18rpx 45rpx 18rpx;
  margin-top: 190rpx;
  background: #fff;
}

.content-list-b .user-n{
  clear: both
}

.content-list-b .user-n image{
  width: 80rpx;
  height: 80rpx;
  border: 4rpx #fff solid;
  display: block;
  margin-top: -46rpx;
  float: left;
  position: relative;
  z-index: 10;
}

.content-list-b .user-n text{
  font-size: 28rpx;
  white-space : nowrap;
  display: block;
  overflow: hidden;
  text-overflow:ellipsis;
  padding-left: 15rpx;
}

.content-list-b .user-c{
  clear: both;
  display: block;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  margin: 20rpx 0;
}

.content-list-b .user-i{
  overflow: hidden;
  position: relative;
  padding-left: 30rpx;
}

.content-list-b .user-i image{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.content-list-b .user-i text{
  font-size: 24rpx;
  display: block;
  float: left;
}

.content-list-b .user-i text:nth-child(2){
  color: #79B132;
}

.content-list-b .user-i text:nth-child(3){
  color: #aaa;
  float: right
}

.notmore{
  display: block;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
}

/* page */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font,Helvetica Neue,Helvetica,sans-serif;
}