/* pages/login/login.wxss */
.login-box{
  padding-top: 200rpx;
  width: 600rpx;
  height: 600rpx;
  align-self: center;
}

.hint-text{
  display: block;
  text-align: center;
  font-size: 22rpx;
  color: #D9D9D9;
  margin: 30rpx 0rpx;
}

.login-box-item{
  margin: 80rpx 0rpx;
}

.login-input-border{
  display: flex;
  flex-direction: row;
  background-color: #FFFFFF;
  height: auto;
  border-bottom: 1rpx solid #D9D9D9;
  color: #D9D9D9;
}

.login-icon{
  width: 80rpx;
  height: 80rpx;
  min-width: 80rpx;
  min-height: 80rpx;
  padding: 0rpx 10rpx 10rpx 10rpx;
}

.login-input{  
  height: 80rpx;
  width: 100%;
  padding: 0rpx 10rpx 10rpx 10rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  color: black;
}

.login-vcode-text-not-sent{
  margin: auto;
  position: relative;
  height: 80rpx;
  width: 200rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  color: red;
  align-content: center;
}

.login-vcode-text-sent{
  margin: auto;
  position: relative;
  height: 80rpx;
  width: 200rpx;
  line-height: 80rpx;
  font-size: 25rpx;
  color: #D9D9D9;
  align-content: center;
}

.btn-login{
  margin: 160rpx 0rpx 0rpx 0rpx;
  color: white;
  background-color: rgb(144, 181, 86);
}

