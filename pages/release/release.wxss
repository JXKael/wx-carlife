/* pages/release/release.wxss */
page{
  height: 100%;
  background: #f7f7f7;
  box-sizing: border-box;
  padding-top: 30rpx;
}

.box{
  /* width: 100%; */
  height: 141rpx;
  background: white;
  border-bottom: 2rpx solid #f7f7f7;
  position: relative;
}

.box1{
  width: 100%;
  position: relative;
  background: white;
  padding: 0rpx 0;
  height: 141rpx;
  display: flex;
  flex-direction: row;
}

.box1 text{
  font-size: 32rpx;
  color: #272727;
  display: block;
  width: 576rpx;
  box-sizing: border-box;
  margin: auto 0rpx auto 30rpx;
}

.box1 switch{
  display: block;
  right: 30rpx;
  margin: auto 0rpx auto 30rpx;
}

.box text{
  display: block;
  width: 230rpx;
  line-height: 141rpx;
  padding-left: 32rpx;
  float: left;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #272727;
}

.box input{
  width: 485rpx;
  float: left;
  height: 141rpx;
  line-height: 141rpx;
  text-align: right;
  font-size: 32rpx;
}

.box image{
  width: 15rpx;
  height: 25rpx;
  position: absolute;
  top: 60rpx;
  right: 32rpx;
}

.title-h1{
  height: 116rpx;
  margin: 0 30rpx;
  font-size: 44rpx;
  font-weight: bold;
  color: #282828;
  line-height: 116rpx;
}

.title-h2{
  height: 58rpx;
  margin: 0 30rpx;
  font-size: 30rpx;
  color: #282828;
  line-height: 58rpx;
}

.section textarea{
  width: auto;
  height: 260rpx;
  background: white;
  font-size: 32rpx;
  padding: 30rpx;
}

.module-box{
  background: white;
  border-top: 2rpx solid #f7f7f7;
  border-bottom: 2rpx solid #f7f7f7;
  margin: 20rpx 0rpx;
}

.module{
  overflow: hidden;
  padding:0 30rpx 10rpx 30rpx;
}

.module text{
  width: 333rpx;
  height: 110rpx;
  background: #f7f7f7;
  float: left;
  border-radius: 12rpx;
  display: block;
  font-size: 40rpx;
  color: #282828;
  text-align: center;
  line-height: 110rpx;
  margin-right: 24rpx;
  margin-bottom: 30rpx;
}

.module text:nth-child(2n){
  margin-right: 0;
}

.cover{
  margin: 20rpx auto;
}

.cover text{
  display: block;
  width: 690rpx;
  height: 391rpx;
  background: #B3B3B3;
  border-radius: 12rpx;
  font-size: 40rpx;
  color: white;
  line-height: 391rpx;
  text-align: center;
  margin: auto;
}

.cover image{
  display: block;
  margin: auto;
  width: 690rpx;
}

.content-null{
  display: block;
  width: 100%;
  height: 64rpx;
  margin: 10rpx auto;
  text-align: center;
  color: #B3B3B3;
}

.btn-commit button{
  margin: 50rpx;
  background-color: rgb(144, 181, 86);
  color: white;
}