/* pages/release/release.wxss */
page{
  background: #f7f7f7;
  box-sizing: border-box;
  padding-top: 30rpx;
}

.box{
  width: 100%;
  height: 141rpx;
  background: #fff;
  border-bottom: 2rpx solid #f7f7f7;
  position: relative;
}

.box1{
  width: 100%;
  position: relative;
  background: #fff;
  padding: 50rpx 0;
}

.box1 text{
  font-size: 32rpx;
  color: #272727;
  display: block;
  width: 576rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
}

.box1 .checkbox{
  display: inline-block;
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -27rpx;
}

.box text{
  display: block;
  width: 230rpx;
  line-height: 141rpx;
  padding-left: 32rpx;
  float: left;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #272727;
}

.box input{
  width: 455rpx;
  float: left;
  height: 141rpx;
  line-height: 141rpx;
  text-align: right;
  font-size: 32rpx;
}

.box image{
  width: 15rpx;
  height: 25rpx;
  position: absolute;
  top: 60rpx;
  right: 32rpx;
}

.title-h1{
  width: 100%;
  height: 116rpx;
  padding: 0 30rpx;
  font-size: 36rpx;
  color: #282828;
  line-height: 116rpx;
}

.section textarea{
  width: 100%;
  height: 260rpx;
  background: #fff;
  font-size: 32rpx;
  padding: 30rpx 30rpx;
}

.module{
  overflow: hidden;
  padding:0 30rpx 10rpx 30rpx;
}

.module text{
  width: 333rpx;
  height: 110rpx;
  background: #fff;
  float: left;
  border-radius: 12rpx;
  display: block;
  font-size: 40rpx;
  color: #282828;
  text-align: center;
  line-height: 110rpx;
  margin-right: 24rpx;
  margin-bottom: 30rpx;
}

.module text:nth-child(2n){
  margin-right: 0;
}

.cover text{
  display: block;
  width: 690rpx;
  height: 391rpx;
  background: #B3B3B3;
  border-radius: 12rpx;
  font-size: 40rpx;
  color: #FFFFFF;
  margin-left: 30rpx;
  line-height: 392rpx;
  text-align: center;
  margin-bottom: 40rpx;
}