    <input class="box-content" type="text" placeholder="未添加" value="{{interest}}" placeholder-style="color:#CCCCCC;"/>
  </view>
  <view class="box">
    <text class="box-title">专业</text>
    <input class="box-content" type="text" placeholder="未添加" value="{{profession}}" placeholder-style="color:#CCCCCC;"/>
  </view>
  <view class="box">
    <text class="box-title">微博链接</text>
    <input class="box-content" type="text" placeholder="未添加" value="{{weiboLink}}" placeholder-style="color:#CCCCCC;"/>
  </view>
</view>