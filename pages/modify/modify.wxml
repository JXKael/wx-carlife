  </view>
  <view class="box">
    <text class="box-title">昵称</text>
    <input class="box-content" type="text" placeholder="未添加" value="{{nickname}}" placeholder-style="color:#CCCCCC;"/>
  </view>
  <view class="box">
    <text class="box-title">姓名</text>
    <input class="box-content" type="text" placeholder="未添加" value="{{name}}" placeholder-style="color:#CCCCCC;"/>
  </view>
  <view class="box">
    <text class="box-title">个性签名</text>
    <input class="box-content" type="text" placeholder="未添加" value="{{sign}}" placeholder-style="color:#CCCCCC;"/>
