/* pages/userinfo/userinfo.wxss */
page{
  background: #f7f7f7;
}

.box{
  width: 100%;
  height: 141rpx;
  background: #fff;
  border-bottom: 2rpx solid #f7f7f7;
  position: relative;
}

.box text{
  display: block;
  width: 230rpx;
  line-height: 141rpx;
  padding-left: 32rpx;
  float: left;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #272727;
}

.box input{
  width: 455rpx;
  float: left;
  height: 141rpx;
  line-height: 141rpx;
  text-align: right;
  font-size: 32rpx;
}

.box .portrait-img{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 20.5rpx;
  right: 32rpx;
  background: #000;
  border-radius: 100rpx;
}

.box .jt-img{
  width: 15rpx;
  height: 25rpx;
  position: absolute;
  top: 60rpx;
  right: 32rpx;
}

.title-h1{
  width: 100%;
  height: 116rpx;
  padding: 0 30rpx;
  font-size: 36rpx;
  color: #282828;
  line-height: 116rpx;
}

.hobby{
  padding: 55rpx 40rpx 55rpx 40rpx;
  background: #fff;
  box-sizing: border-box;
}

.hobby radio {  
  transform:scale(0.7);  
}

.hobby label{
  font-size: 32rpx;
  color: #272727;
  margin-right: 30rpx;
}

.hobby label:nth-child(4n){
  margin-right: 0;
}

.btn{
  width: 686rpx;
  color: #fff;
  font-size: 34rpx;
  border-radius: 86rpx;
  margin: 66rpx auto 90rpx auto;
  background: linear-gradient(to right, #6ED569 , #228959); /* 标准的语法 */
}